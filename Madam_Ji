    <script>
        // === CONFIGURATION ===
        const passwordCorrect = "ayat";
        
        // 12 COMMITMENTS (TEASING & FUNNY)
        const commitments = [
            { month: "Jan", icon: "üò∏", text: "January: I promise to listen to your drama... but only for 5 minutes a day." },
            { month: "Feb", icon: "üç´", text: "February: Valentine's pe chocolates tum khana, bill main bhar dunga (as always)." },
            { month: "Mar", icon: "üò§", text: "March: Jab tum gussa hogi, main tumhe pizza khila kar chup karaunga." },
            { month: "Apr", icon: "ü§°", text: "April: Main tumhare saare funny faces ke screenshots safe rakhunga for blackmail." },
            { month: "May", icon: "üöó", text: "May: Long drive pe jayenge, lekin gaana meri pasand ka chalega." },
            { month: "Jun", icon: "üç¶", text: "June: Garmi mein tumhari ice-cream share nahi karunga. Apna alag lo." },
            { month: "Jul", icon: "üí§", text: "July: I promise to send 'Good Night' texts even if you fall asleep while chatting." },
            { month: "Aug", icon: "üêí", text: "August: Chahe tum bandariya jesi harkatein karo, phir bhi I love you." },
            { month: "Sep", icon: "üì∏", text: "September: I will be your personal photographer until you get the perfect DP." },
            { month: "Oct", icon: "üßü‚Äç‚ôÄÔ∏è", text: "October: Subah uth ke tum zombie lagti ho, par main darrunga nahi." },
            { month: "Nov", icon: "üß•", text: "November: Thand mein apni jacket de dunga, phir chahe main khud jam jaun." },
            { month: "Dec", icon: "üíç", text: "December: 2026 ke end tak, humara rishta aur bhi strong hoga (Hopefully tum sudhar jao)." }
        ];

        // === LOGIC ===
        
        function checkPassword() {
            const input = document.getElementById('password').value.toLowerCase();
            if (input === passwordCorrect) {
                switchScreen('quiz-screen');
            } else {
                alert("Wrong password! Are you really Ayat?");
            }
        }

        function switchScreen(id) {
            document.querySelectorAll('.screen').forEach(s => {
                s.style.opacity = 0;
                setTimeout(() => s.classList.remove('active'), 500);
            });
            const target = document.getElementById(id);
            setTimeout(() => {
                target.classList.add('active');
                target.style.opacity = 1;
            }, 500);
            
            if(id === 'loading-screen') startLoading();
            if(id === 'game-screen') startGame();
        }

        // Quiz Logic
        let quizStep = 0;
        function nextQuiz(isCorrect) {
            if (isCorrect) {
                quizStep++;
                if (quizStep === 1) {
                    document.getElementById('quiz-q').innerText = "Who is always right in an argument?";
                    document.querySelectorAll('#quiz-screen button')[0].innerText = "Ayat";
                    document.querySelectorAll('#quiz-screen button')[1].innerText = "Me (The Boy)";
                } else {
                    switchScreen('loading-screen');
                }
            }
        }
        function wrongAnswer() {
            alert("Error! Wrong Answer. Try again (Hint: Pick Ayat)");
        }

        // Loading Logic
        function startLoading() {
            let width = 0;
            const bar = document.getElementById('prog-bar');
            const text = document.getElementById('loading-text');
            const interval = setInterval(() => {
                width += 2; // slow loading
                bar.style.width = width + '%';
                if (width === 30) text.innerText = "Calculating Cuteness Levels...";
                if (width === 60) text.innerText = "Loading Funny Memories...";
                if (width === 90) text.innerText = "Almost there...";
                if (width >= 100) {
                    clearInterval(interval);
                    switchScreen('game-screen');
                }
            }, 100); // speed of loading
        }

        // Balloon Game Logic
        let balloonsLeft = 15;
        function startGame() {
            const container = document.getElementById('game-screen');
            for(let i=0; i<15; i++) {
                let b = document.createElement('div');
                b.className = 'balloon';
                b.style.left = Math.random() * 80 + '%';
                b.style.top = Math.random() * 80 + '%';
                b.style.backgroundColor = getRandomColor();
                b.onclick = function() {
                    this.remove();
                    balloonsLeft--;
                    document.getElementById('balloon-count').innerText = "Balloons Left: " + balloonsLeft;
                    if(balloonsLeft === 0) {
                        launchMainWorld();
                    }
                };
                container.appendChild(b);
            }
        }
        function getRandomColor() {
            const colors = ['#ff6f91', '#ff9671', '#ffc75f', '#f9f871', '#00d2fc'];
            return colors[Math.floor(Math.random() * colors.length)];
        }

        // Main World Launch
        function launchMainWorld() {
            document.getElementById('game-screen').classList.remove('active');
            document.getElementById('main-world').style.display = 'block';
            generateBoxes();
        }

        // Generate Boxes
        function generateBoxes() {
            const grid = document.getElementById('gift-grid');
            commitments.forEach((item, index) => {
                let box = document.createElement('div');
                box.className = 'gift-box';
                box.innerHTML = `<span class="gift-icon">${item.icon}</span><div class="month-label">${item.month}</div>`;
                box.onclick = () => showModal(item);
                grid.appendChild(box);
            });
        }

        // Modal Logic
        function showModal(item) {
            document.getElementById('modal').style.display = 'flex';
            document.getElementById('modal-icon').innerText = item.icon;
            document.getElementById('modal-text').innerText = item.text;
        }
        function closeModal() {
            document.getElementById('modal').style.display = 'none';
        }

        // Prank Button Logic
        function moveButton() {
            const btn = document.getElementById('no-btn');
            const x = Math.random() * (window.innerWidth - 100);
            const y = Math.random() * (window.innerHeight - 100);
            btn.style.position = 'fixed';
            btn.style.left = x + 'px';
            btn.style.top = y + 'px';
        }

    </script>
